<!DOCTYPE html>
<html lang="en">
<%- include("./partials/head.ejs") %>
<body>
<%- include("./partials/nav.ejs") %>
<style>
    /* Body */
body {
    background: #0f1115;
    font-family: "Montserrat", sans-serif;
    margin: 0;
    padding: 0;
    color: #fff;
}

/* Container */
.new-group-container {
    display: flex;
    justify-content: center;
    align-items: center;
    min-height: calc(100vh - 120px);
    padding: 2rem;
}

/* Card */
.new-group-card {
    background: #1e1e1e;
    border-radius: 1rem;
    padding: 2.5rem;
    max-width: 500px;
    width: 100%;
    box-shadow: 0 8px 24px rgba(0,0,0,0.6);
    text-align: center;
    transition: transform 0.3s ease, box-shadow 0.3s ease;
}

.new-group-card:hover {
    box-shadow: 0 12px 32px rgba(0,0,0,4);
}

/* Heading */
.new-group-card h1 {
    font-size: 2rem;
    margin-bottom: 1.5rem;
}

/* Error message */
.error-message {
    background: #ff4d4f;
    color: #fff;
    padding: 0.75rem 1rem;
    border-radius: 0.5rem;
    margin-bottom: 1.5rem;
    font-size: 0.9rem;
}

/* Input group */
.input-group {
    margin-bottom: 1.5rem;
    text-align: left;
}

.input-group label {
    display: block;
    margin-bottom: 0.5rem;
    font-weight: 500;
}

.input-group input {
    width: 100%;
    padding: 0.75rem 1rem;
    border-radius: 0.75rem;
    border: 1px solid #333;
    background: #2a2a2a;
    color: #fff;
    font-size: 1rem;
    transition: border 0.3s ease, box-shadow 0.3s ease;
}

.input-group input:focus {
    border-color: #4e89ff;
    box-shadow: 0 0 8px rgba(78, 137, 255, 0.5);
    outline: none;
}

/* Buttons */
.buttons-wrapper {
    display: flex;
    gap: 1rem;
    justify-content: center;
    flex-wrap: wrap;
}

.btn-primary,
.btn-secondary {
    padding: 0.75rem 2rem;
    border-radius: 0.75rem;
    text-decoration: none;
    font-weight: 500;
    transition: background 0.3s ease, transform 0.2s ease;
    cursor: pointer;
}

.btn-primary {
    background: #4e89ff;
    color: #fff;
    border: none;
}

.btn-primary:hover {
    background: #3b6fe2;
    transform: translateY(-2px);
}

.btn-secondary {
    background: #555;
    color: #fff;
    border: none;
}

.btn-secondary:hover {
    background: #777;
    transform: translateY(-2px);
}

/* Responsive */
@media (max-width: 600px) {
    .new-group-card {
        padding: 2rem 1.5rem;
    }

    .new-group-card h1 {
        font-size: 1.75rem;
    }

    .buttons-wrapper {
        flex-direction: column;
    }

    .btn-primary, .btn-secondary {
        width: 100%;
        text-align: center;
    }
}

</style>
<div class="new-group-container">
    <div class="new-group-card">
        <h1>Kreiraj novu grupu</h1>

        <% if(error && error.length > 0) { %>
            <p class="error-message"><%= error %></p>
        <% } %>

        <form action="/newgroup" method="POST">
            <div class="input-group">
                <label for="name">Ime grupe</label>
                <input type="text" id="name" name="name" placeholder="Unesite ime grupe">
            </div>

            <div class="buttons-wrapper">
                <button type="submit" class="btn-primary">Kreiraj grupu</button>
                <a href="/groups" class="btn-secondary">Odustani</a>
            </div>
        </form>
    </div>
</div>

<%- include("./partials/footer.ejs") %>
</body>
</html>
