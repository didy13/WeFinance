<!DOCTYPE html>
<html lang="en">
<%- include("./partials/head.ejs") %>
<body>
<%- include("./partials/nav.ejs") %>

<div class="dashboard-container container py-5">
  <div class="row">
    <!-- Leva kolona -->
    <div class="col-lg-4 mb-4">
      <div class="dashboard-card p-3 mb-3">
        <!-- Korisnik -->
        <div class="dashboard-user mb-3">
          <i class="fas fa-user me-2"></i>
          <span>Korisnik: <strong><%= user.username %></strong></span>
        </div>

        <!-- Balans -->
        <div class="dashboard-balance-highlight mb-3">
          <i class="fas fa-wallet me-2"></i>
          Balans: <span><%= user.balance %> $</span>
        </div>

        <!-- Logout -->
        <form action="/logout" method="GET" class="dashboard-logout">
          <button type="submit">
            <i class="fas fa-sign-out-alt me-1"></i> Izloguj se
          </button>
        </form>
        <div id="errorBalance" class="text-danger text-center mt-2"><%= error %></div>
      </div>

      <!-- Dodavanje novca -->
      <div class="dashboard-card p-3">
        <form action="/changebalance" method="POST" class="dashboard-page__change-balance d-flex flex-wrap gap-2">
          <input id="balans" name="balans" step="0.01" type="number" placeholder="Iznos" class="form-control">
          <button type="submit" class="btn-create-goal">
            <i class="fas fa-plus-circle me-1"></i> Dodaj novac
          </button>
        </form>
      </div>
    </div>

    <!-- Desna kolona -->
    <div class="col-lg-8">
      <!-- Dnevni cilj -->
      <div class="dashboard-single-goal p-3 bg-dark text-light rounded shadow-sm mb-3">
        <div class="dashboard-goal-info d-flex justify-content-between mb-2">
          <strong><i class="fas fa-bullseye me-2"></i> Dnevni cilj</strong>
          <span><%= user.daily_saved %> / <%= user.daily_goal %> $</span>
        </div>
        <div class="progress mb-2" style="height: 10px;">
          <div class="progress-bar bg-success" role="progressbar" 
               style="width:<%= Math.min((user.daily_saved / user.daily_goal) * 100, 100) %>%"></div>
        </div>
        <form action="/changedailygoal" method="POST" class="dashboard-page__change-balance d-flex flex-wrap gap-2">
          <input id="dailyGoal" name="dailyGoal" step="0.01" type="number" placeholder="Iznos" class="form-control">
          <button type="submit" class="btn-create-goal">
            <i class="fas fa-plus-circle me-1"></i> Promeni dnevni cilj
          </button>
        </form>
      </div>

      <!-- Ostali ciljevi -->
      <h2 class="mb-3">Tvoji ciljevi:</h2>
      <div class="row">
        <% if (goals.length > 0) { %>
          <% goals.forEach(goal => { %>
            <div class="col-md-6 mb-3">
              <div class="dashboard-single-goal p-3 bg-dark text-light rounded shadow-sm">
                <div class="dashboard-goal-info d-flex justify-content-between mb-2">
                  <strong><i class="fas fa-bullseye me-2"></i> <%= goal.name %></strong>
                  <span><%= goal.current %> / <%= goal.target %> $</span>
                </div>
                <div class="progress mb-2" style="height: 10px;">
                  <div class="progress-bar bg-success" role="progressbar" 
                       style="width:<%= Math.min((goal.current / goal.target) * 100, 100) %>%"></div>
                </div>
                <form action="/addgoalbalance" method="POST" class="dashboard-goal__form d-flex flex-wrap gap-2">
                  <input name="goalbalance" step="0.01" type="number" placeholder="Iznos" class="form-control">
                  <input type="hidden" name="goalId" value="<%= goal.id %>">
                  <button type="submit" class="btn-create-goal">
                    <i class="fas fa-plus me-1"></i> Dodaj novac
                  </button>
                </form>
              </div>
            </div>
          <% }) %>
        <% } else { %>
          <p>Nema≈° nijedan cilj trenutno.</p>
        <% } %>
      </div>

      <!-- Kreiranje novog cilja -->
      <form action="/newgoals" method="GET" class="mt-3">
        <button type="submit" class="btn-create-goal">
          <i class="fas fa-flag me-1"></i> Kreiraj novi cilj
        </button>
      </form>
    </div>
  </div>
</div>

<%- include("./partials/footer.ejs") %>
<script src="https://kit.fontawesome.com/a076d05399.js" crossorigin="anonymous"></script>
</body>
</html>
