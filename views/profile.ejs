<!DOCTYPE html>
<html lang="en">
<%- include("./partials/head.ejs") %>
<body>
<%- include("./partials/nav.ejs") %>

<div class="container py-5">

    <!-- Header: Korisnik | Balans | Logout -->
    <div class="dashboard-header">
        <div class="dashboard-user">
            <span>Korisnik: <strong><%= user.username %></strong></span>
        </div>

        <div class="dashboard-balance-highlight">
            Balans: <span><%= user.balance %> $</span>
        </div>

        <div class="dashboard-logout">
            <form action="/logout" method="GET">
                <button type="submit">Izloguj se</button>
            </form>
        </div>
    </div>

    <!-- Dodavanje novca na balans -->
    <form action="/changebalance" method="POST" class="dashboard-page__change-balance mb-4 d-flex flex-wrap gap-2">
        <input id="balans" name="balans" step="0.01" type="number" placeholder="Iznos">
        <button type="submit" class="dashboard-page__button">Dodaj novac</button>
        <span id="errorBalance"><%= error %></span>
    </form>

    <!-- Ciljevi -->
    <h2 class="mb-3">Tvoji ciljevi:</h2>
    <div class="row dashboard-goal-section">
        <% if (goals.length > 0) { %>
            <% goals.forEach(goal => { %>
                <div class="col-md-6">
                    <div class="dashboard-single-goal">
                        <div class="dashboard-goal-info d-flex justify-content-between mb-2">
                            <strong><%= goal.name %></strong>
                            <span><%= goal.current %> / <%= goal.target %> $</span>
                        </div>
                        <div class="dashboard-progress-bar">
                            <div class="dashboard-progress dashboard-progress-finished" style="width:<%= Math.min((goal.current / goal.target) * 100, 100) %>%"></div>
                        </div>
                        <form action="/addgoalbalance" method="POST" class="dashboard-goal__form d-flex flex-wrap gap-2">
                            <input name="goalbalance" step="0.01" type="number" placeholder="Iznos">
                            <input type="hidden" name="goalId" value="<%= goal.id %>">
                            <button type="submit" class="dashboard-page__button">Dodaj novac</button>
                        </form>
                    </div>
                </div>
            <% }) %>
        <% } else { %>
            <p>Nema≈° nijedan cilj trenutno.</p>
        <% } %>
    </div>

    <!-- Kreiranje novog cilja -->
    <form action="/newgoals" method="GET" class="mt-3">
        <button type="submit" class="btn dashboard-page__button">Kreiraj novi cilj</button>
    </form>
</div>

<%- include("./partials/footer.ejs") %>
</body>
</html>
