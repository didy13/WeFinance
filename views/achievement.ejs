<!DOCTYPE html>
<html lang="en">
  <%- include("./partials/head.ejs") %>
  <body>
    <%- include("./partials/nav.ejs") %>

    <div class="container py-5">
      <h1 class="mb-4">Achievements</h1>

      <div class="achievements-grid">
        <% achievements.forEach(ach => { %>
          <div class="achievement-card">
            <div class="achievement-icon mb-3">
              <i class="fas fa-medal <%= ach.type || 'bronze' %>"></i>
            </div>

            <h5 class="achievement-name"><%= ach.name %></h5>
            <p class="achievement-desc"><%= ach.description %></p>

            <div class="progress mb-2">
              <div class="progress-bar" role="progressbar" 
                   style="--progress-width:<%= Math.min((ach.current / ach.target) * 100, 100) %>%;"></div>
            </div>

            <span class="achievement-progress"><%= ach.current + '/' + ach.target %></span>
            <span class="badge <%= ach.type || 'bronze' %>">
              <%= (ach.type || 'bronze').toUpperCase() %>
            </span>
          </div>
        <% }) %>
      </div>

      <% if (!achievements || achievements.length === 0) { %>
        <div class="groups-empty">
          No achievements yet. Keep going!
        </div>
      <% } %>
    </div>

    <%- include("./partials/footer.ejs") %>
  </body>
</html>
