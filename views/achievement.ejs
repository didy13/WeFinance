<!DOCTYPE html>
<html lang="en">
  <%- include("./partials/head.ejs") %>
  <body>
    <%- include("./partials/nav.ejs") %>

    <div class="container py-5">
      <h1 class="mb-4 text-white">Dostignuća</h1>

      <div class="row">
        <% 
          /*const types = ["bronza", "srebro", "zlato", "dijamant"];
          const icons = {
            bronza: "fas fa-medal",    // Font Awesome medal icon
            srebro: "fas fa-award",
            zlato: "fas fa-trophy",
            dijamant: "fas fa-gem"
          };

          // Generišemo random achievements
          const achievements = [];
          for(let i=1; i<=12; i++){
            const type = types[Math.floor(Math.random()*types.length)];
            achievements.push({
              name: `Achievement ${i}`,
              description: `Opis za achievement ${i}`,
              type
            });
          }*/
        %>

        <% achievements.forEach(ach => { %>
          <div class="col-md-3 col-sm-6 mb-4">
            <div class="card achievement-card text-center h-100 p-3">
              <div class="achievement-icon mb-2">
                <svg xmlns="http://www.w3.org/2000/svg" width="50" height="50" fill="white" class="bi bi-coin" viewBox="0 0 16 16">
                  <path d="M5.5 9.511c.076.954.83 1.697 2.182 1.785V12h.6v-.709c1.4-.098 2.218-.846 2.218-1.932 0-.987-.626-1.496-1.745-1.76l-.473-.112V5.57c.6.068.982.396 1.074.85h1.052c-.076-.919-.864-1.638-2.126-1.716V4h-.6v.719c-1.195.117-2.01.836-2.01 1.853 0 .9.606 1.472 1.613 1.707l.397.098v2.034c-.615-.093-1.022-.43-1.114-.9zm2.177-2.166c-.59-.137-.91-.416-.91-.836 0-.47.345-.822.915-.925v1.76h-.005zm.692 1.193c.717.166 1.048.435 1.048.91 0 .542-.412.914-1.135.982V8.518z"/>
                  <path d="M8 15A7 7 0 1 1 8 1a7 7 0 0 1 0 14m0 1A8 8 0 1 0 8 0a8 8 0 0 0 0 16"/>
                  <path d="M8 13.5a5.5 5.5 0 1 1 0-11 5.5 5.5 0 0 1 0 11m0 .5A6 6 0 1 0 8 2a6 6 0 0 0 0 12"/>
                </svg>
                <i class="<%= ach.name %> fa-3x <%= ach.types %>"></i>
              </div>
              <div class="progress mb-2" style="height: 10px;">
                <div class="progress-bar bg-success" role="progressbar" 
                     style="width:<%= Math.min((ach.current / ach.target) * 100, 100) %>%"></div>
            </div>
              <h5 class="achievement-name mb-1"><%= ach.name %></h5>
              <p class="achievement-desc mb-0"><%= ach.description %></p>
              <span class="achievement-type mt-2 badge <%= ach.types %>"><%= ach.types.toUpperCase() %></span>
            </div>
          </div>
        <% }) %>
      </div>
    </div>

    <%- include("./partials/footer.ejs") %>
  </body>
</html>
